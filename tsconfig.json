{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",              
    "lib": ["ES2020", "DOM"],       
    "moduleResolution": "node",     
    "outDir": "dist",             
    "rootDir": "src",             
    "esModuleInterop": true,       
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}